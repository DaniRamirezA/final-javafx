<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.finaljavafx.ADaniela.controllers.auth.AuthController"
      alignment="CENTER"
      spacing="20"
      style="-fx-padding: 40; -fx-background-color: #f5f5f5;">

    <Label text="Sistema de Cafetería" style="-fx-font-size: 24; -fx-font-weight: bold;"/>
    <Label text="Inicio de Sesión" style="-fx-font-size: 18;"/>

    <GridPane hgap="10" vgap="10"
              alignment="CENTER"
              maxWidth="300"
              style="-fx-padding: 10;">
        <Label text="Usuario:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="campoUsuario" GridPane.rowIndex="0" GridPane.columnIndex="1" />

        <Label text="Contraseña:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <PasswordField fx:id="campoContrasena" GridPane.rowIndex="1" GridPane.columnIndex="1" />
    </GridPane>

    <Button fx:id="btnIngresar" text="Ingresar" onAction="#login"
            maxWidth="150"
            alignment="CENTER"
            style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;"/>
</VBox>

