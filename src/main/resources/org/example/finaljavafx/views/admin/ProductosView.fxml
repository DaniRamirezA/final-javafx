<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.finaljavafx.ADaniela.controllers.admin.ProductosController"
      spacing="10" style="-fx-padding: 10;">

    <HBox spacing="10" style="-fx-padding: 0 0 10 0;">
        <Button text="Agregar Producto" onAction="#agregarProducto"/>
        <Button text="Editar Producto" onAction="#editarProducto"/>
        <Button text="Eliminar Producto" onAction="#eliminarProducto"/>
    </HBox>

    <TableView fx:id="tablaProductos">
        <columns>
            <TableColumn fx:id="columnaCodigo" text="CÃ³digo" prefWidth="100">
                <cellValueFactory>
                    <PropertyValueFactory property="codigo"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="columnaNombre" text="Nombre" prefWidth="150">
                <cellValueFactory>
                    <PropertyValueFactory property="nombre"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="columnaPrecio" text="Precio" prefWidth="100">
                <cellValueFactory>
                    <PropertyValueFactory property="precio"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="columnaCantidad" text="Disponibles" prefWidth="100">
                <cellValueFactory>
                    <PropertyValueFactory property="cantidadDisponible"/>
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>
</VBox>