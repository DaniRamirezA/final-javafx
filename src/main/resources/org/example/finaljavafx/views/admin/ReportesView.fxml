<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.finaljavafx.ADaniela.controllers.admin.ReportesController"
      spacing="15" style="-fx-padding: 20;">

    <!-- Tabla de reportes - VersiÃ³n compatible con el controlador existente -->
    <TableView fx:id="tablaReportes">
        <columns>
            <!-- Columna Fecha (CON fx:id que espera el controlador) -->
            <TableColumn fx:id="colFecha" text="Fecha" prefWidth="150">
                <cellValueFactory>
                    <PropertyValueFactory property="fecha"/>
                </cellValueFactory>
            </TableColumn>

            <!-- Columna Usuario (CON fx:id que espera el controlador) -->
            <TableColumn fx:id="colUsuario" text="Usuario" prefWidth="150">
                <cellValueFactory>
                    <PropertyValueFactory property="usuario"/>
                </cellValueFactory>
            </TableColumn>

            <!-- Columna Productos (CON fx:id que espera el controlador) -->
            <TableColumn fx:id="colTotalProductos" text="Productos" prefWidth="100" style="-fx-alignment: CENTER;">
                <cellValueFactory>
                    <PropertyValueFactory property="totalProductos"/>
                </cellValueFactory>
            </TableColumn>

            <!-- Columna Total Ventas (CON fx:id que espera el controlador) -->
            <TableColumn fx:id="colTotalVentas" text="Total Ventas" prefWidth="150" style="-fx-alignment: CENTER_RIGHT;">
                <cellValueFactory>
                    <PropertyValueFactory property="totalVentas"/>
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>

    <!-- Botones (sin cambios) -->
    <HBox spacing="15" alignment="CENTER">
        <Button text="Ver Detalle" onAction="#verDetalleReporte"
                style="-fx-background-color: #2a7fcf; -fx-text-fill: white; -fx-min-width: 120; -fx-min-height: 35;"/>

        <Button text="Actualizar" onAction="#actualizarReportes"
                style="-fx-background-color: #e47911; -fx-text-fill: white; -fx-min-width: 120; -fx-min-height: 35;"/>
    </HBox>
</VBox>