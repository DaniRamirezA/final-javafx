<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.collections.FXCollections?>


<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.finaljavafx.ADaniela.controllers.admin.UsuariosController"
      spacing="15" style="-fx-padding: 20;">

    <!-- Formulario -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Usuario:" style="-fx-font-weight: bold;"/>
        <TextField fx:id="campoUsuario" promptText="Nombre" style="-fx-pref-width: 150;"/>

        <Label text="Contraseña:" style="-fx-font-weight: bold; -fx-padding: 0 0 0 10;"/>
        <PasswordField fx:id="campoContrasena" promptText="Contraseña" style="-fx-pref-width: 150;"/>

        <Label text="Rol:" style="-fx-font-weight: bold; -fx-padding: 0 0 0 10;"/>
        <ComboBox fx:id="comboRol" promptText="Seleccione" style="-fx-pref-width: 150;"/>

        <Button text="Agregar" onAction="#agregarTrabajador"
                style="-fx-background-color: #2a7fcf; -fx-text-fill: white; -fx-min-width: 100; -fx-margin: 0 0 0 10;"/>

        <Button text="Eliminar" onAction="#eliminarTrabajador"
                style="-fx-background-color: #d16a6a; -fx-text-fill: white; -fx-min-width: 100;"/>
    </HBox>

    <!-- Tabla -->
    <TableView fx:id="tablaTrabajadores" style="-fx-font-size: 14;">
        <columns>
            <TableColumn text="Usuario" prefWidth="200">
                <cellValueFactory><PropertyValueFactory property="username"/></cellValueFactory>
            </TableColumn>
            <TableColumn text="Rol" prefWidth="150">
                <cellValueFactory><PropertyValueFactory property="rol"/></cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>
</VBox>