<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.collections.FXCollections?>


<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.finaljavafx.ADaniela.controllers.admin.UsuariosController"
      spacing="10" style="-fx-padding: 10;">

    <HBox spacing="10" style="-fx-padding: 10;">
        <Label text="Usuario:"/>
        <TextField fx:id="campoUsuario" promptText="Nombre de usuario" style="-fx-pref-width: 150;"/>

        <Label text="Contraseña:"/>
        <PasswordField fx:id="campoContrasena" promptText="Contraseña" style="-fx-pref-width: 150;"/>

        <Label text="Rol:"/>
        <ComboBox fx:id="comboRol" promptText="Seleccione rol" style="-fx-pref-width: 150;">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="admin"/>
                    <String fx:value="trabajador"/>
                </FXCollections>
            </items>
        </ComboBox>

        <Button text="Agregar" onAction="#agregarTrabajador" style="-fx-pref-width: 100;"/>
        <Button text="Eliminar" onAction="#eliminarTrabajador" style="-fx-pref-width: 100;"/>
    </HBox>

    <TableView fx:id="tablaTrabajadores" style="-fx-pref-height: 300;">
        <columns>
            <TableColumn text="Usuario" prefWidth="150">
                <cellValueFactory>
                    <PropertyValueFactory property="username"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Contraseña" prefWidth="150">
                <cellValueFactory>
                    <PropertyValueFactory property="password"/> <!-- Nueva columna -->
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Rol" prefWidth="150">
                <cellValueFactory>
                    <PropertyValueFactory property="rol"/>
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>
</VBox>
